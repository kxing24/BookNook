<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:context=".fragments.BookDetailFragment">

            <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvGroupTitle"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBookCover"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                tools:text="Pride and Prejudice" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGroupTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                tools:text="by Jane Austen" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNumMembers"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                tools:text="Here is my book description." />

            <Button
                android:id="@+id/btnJoinGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnShelveBook"
                android:layout_centerHorizontal="true"
                android:text="Join Group"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCreateGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnShelveBook"
                android:layout_centerHorizontal="true"
                android:text="Create Group"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnGotoGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnShelveBook"
                android:layout_centerHorizontal="true"
                android:text="Go To Group"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/btnShelveBook"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvNumMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnShelveBook"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                tools:text="2 members" />

            <Button
                android:id="@+id/btnShelveBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAuthor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Shelve Book" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>