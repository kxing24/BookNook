<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:context=".activities.BookDetailActivity">

            <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvGroupTitle"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBookCover"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                tools:text="Pride and Prejudice" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGroupTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                tools:text="by Jane Austen" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAuthor"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="20dp"
                tools:text="Here is my book description." />

            <Button
                android:id="@+id/btnJoinGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAuthor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Join Group"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCreateGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAuthor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Create Group"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnGotoGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAuthor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Go To Group"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tvAuthor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>